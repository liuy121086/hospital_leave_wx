/* pages/leave-list/leave-list.wxss */
.container {
    padding: 20rpx;
    height: 100vh;
    display: flex;
    flex-direction: column;
    background: #f5f5f5;
  }
  
  .action-bar {
    padding: 20rpx;
    background: #fff;
    margin-bottom: 20rpx;
    border-radius: 16rpx;
  }
  
  .add-btn {
    background: #07c160;
    color: white;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 12rpx;
    font-size: 32rpx;
  }
  
  .search-box {
    background: #fff;
    border-radius: 16rpx;
    margin-bottom: 20rpx;
  }
  
  .search-header {
    display: flex;
    gap: 20rpx;
    padding: 20rpx;
  }
  
  input {
    flex: 1;
    height: 70rpx;
    border: 1rpx solid #eee;
    padding: 0 20rpx;
    border-radius: 12rpx;
    font-size: 28rpx;
  }
  
  .filter-btn {
    width: 140rpx;
    height: 70rpx;
    line-height: 70rpx;
    font-size: 28rpx;
  }
  
  .filter-area {
    padding: 20rpx;
    border-top: 1rpx solid #eee;
  }
  
  .filter-item {
    padding: 25rpx 0;
    border-bottom: 1rpx solid #eee;
    font-size: 28rpx;
  }
  
  .filter-btns {
    display: flex;
    justify-content: flex-end;
    gap: 30rpx;
    margin-top: 30rpx;
  }
  
  .list-container {
    flex: 1;
    background: #fff;
    border-radius: 16rpx;
  }
  
  .list-header, .list-item {
    display: flex;
    align-items: center;
    padding: 25rpx;
    border-bottom: 1rpx solid #eee;
    font-size: 28rpx;
  }
  
  .list-header text {
    flex: 1;
    font-weight: 500;
    text-align: center;
  }
  
  .list-item text {
    flex: 1;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  
  .actions {
    flex: 1;
    display: flex;
    gap: 20rpx;
    justify-content: center;
  }
  
  .action-btn {
    color: #07c160;
    padding: 5rpx 10rpx;
  }
  
  .delete {
    color: #ff453a;
  }
  
  .disabled-text {
    color: #999;
  }
  
  .status-1 { color: #07c160; }
  .status-0 { color: #ff9500; }
  .status-2 { color: #ff453a; }
  
  .empty, .no-more {
    text-align: center;
    padding: 40rpx;
    color: #999;
    font-size: 28rpx;
  }