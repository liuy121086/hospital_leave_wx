
.container {
  padding: 20rpx;
}

.search-box {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.search-box input,
.search-box picker {
  flex: 1;
  min-width: 200rpx;
  padding: 15rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
}

.list-container {
  height: calc(100vh - 300rpx);
}

.list-item {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
}

.item-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.status-0 { color: #09bb07; }
.status-1 { color: #888; }
.status-2 { color: #e64340; }

.item-body view {
  margin: 8rpx 0;
  color: #666;
}

.item-actions {
  margin-top: 15rpx;
  display: flex;
  justify-content: flex-end;
  gap: 10rpx;
}

.pagination {
  display: flex;
  justify-content: center;
  gap: 10rpx;
  margin-top: 20rpx;
}

.pagination button {
  min-width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 15rpx;
}

.pagination .active {
  background: #007aff;
  color: white;
}
/* 在 wxss 中添加 */
.loading-text {
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.button-group {
    display: flex;
    gap: 20rpx;
    padding: 20rpx;
  }
  .button-group button {
    flex: 1;
  }
  .search-box {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 10rpx;
  }
  
  .date-range {
    display: flex;
    align-items: center;
    gap: 10rpx;
    grid-column: span 2;
  }
  
  .date-picker {
    padding: 10rpx 20rpx;
    border: 1rpx solid #ddd;
    border-radius: 8rpx;
    color: #666;
  }
  
  .filter-item {
    padding: 15rpx;
    border: 1rpx solid #ddd;
    border-radius: 8rpx;
    color: #333;
  }