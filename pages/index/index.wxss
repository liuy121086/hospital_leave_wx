/* 页面容器 */
.container {
    padding: 20px;
    background-color: #f4f4f4;
  }
  
  /* 九宫格容器 */
  .grid-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
  }
  
  /* 每个格子 */
  .grid-item {
    width: 30%; /* 每行显示 3 个图标，宽度为 30% */
    margin-bottom: 20px;
    text-align: center;
    background-color: #fff;
    border-radius: 10px;
    padding: 10px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    box-sizing: border-box; /* 防止 padding 影响宽度 */
  }
  
  /* 格子中的图标 */
  .grid-icon {
    width: 50px;
    height: 50px;
    margin-bottom: 10px;
  }
  
  /* 格子中的文字 */
  .grid-text {
    font-size: 14px;
    color: #333;
    white-space: nowrap; /* 防止文字换行 */
    overflow: hidden; /* 隐藏溢出部分 */
    text-overflow: ellipsis; /* 超出部分显示省略号 */
  }