/* 登录页面样式 */
.login-container {
  padding: 30px 15px;
  min-height: 100vh;
  background: #f1f1f1;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* Logo样式 */
.logo-box {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  overflow: hidden;
  margin: 40px 0;
  box-shadow: 0 4px 12px rgba(0,161,214,0.2);
  border: 2px solid #00a1d6;
}

.logo {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 表单容器 */
form {
  width: calc(100% - 30px);
  max-width: 400px;
}

/* 输入框组 */
.input-group {
  margin-bottom: 24px;
}

.input {
  height: 48px;
  padding: 0 16px;
  background: #fff;
  border: 1px solid #e7e7e7;
  border-radius: 8px;
  font-size: 16px;
  transition: all 0.3s;
}

.input:focus {
  border-color: #00a1d6;
  box-shadow: 0 0 8px rgba(0,161,214,0.2);
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 48px;
  background: #00a1d6;
  color: #fff;
  border-radius: 24px;
  font-size: 16px;
  font-weight: 500;
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-btn:active {
  opacity: 0.8;
}

.login-btn[disabled] {
  background: #b8d9e9;
  color: rgba(255,255,255,0.8);
}

/* 注册链接 */
.footer {
  margin-top: 30px;
}

.register-text {
  color: #00a1d6;
  font-size: 14px;
  text-decoration: underline;
}

/* 输入框placeholder样式 */
.input::-webkit-input-placeholder {
  color: #c0c4cc;
  font-size: 14px;
}