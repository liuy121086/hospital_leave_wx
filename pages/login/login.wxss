/* pages/login/login.wxss */
.login-container {
    padding: 40rpx;
    min-height: 100vh;
    background: #f8f8f8;
  }
  
  .logo-box {
    text-align: center;
    margin: 100rpx 0;
  }
  
  .logo {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
  }
  
  .input-group {
    margin-bottom: 40rpx;
    background: #fff;
    border-radius: 16rpx;
    padding: 20rpx;
    box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  }
  
  .input {
    height: 80rpx;
    line-height: 80rpx;
    font-size: 32rpx;
  }
  
  .login-btn {
    margin-top: 60rpx;
    background: #07c160;
    color: #fff;
    border-radius: 50rpx;
    font-size: 34rpx;
  }
  
  .login-btn[disabled] {
    background: #ededed;
    color: #999;
  }
  
  .footer {
    text-align: center;
    margin-top: 60rpx;
  }
  
  .register-text {
    color: #576b95;
    font-size: 28rpx;
  }